{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "out/**"]
    },
    "build:cf": {
      "dependsOn": ["^build"],
      "outputs": ["out/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {},
    "db:push": {},
    "db:migrate": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}